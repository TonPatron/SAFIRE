{% extends 'baseUser2.html.twig' %}

{% block body %}


		<br>

		<h5>{{film.titre}}
		</h5>

		<div>
			<a href="{{path('montrerLeFilm', {'id':film.id})}}">
				<img class="imageabsolute" src="{{asset('/uploads/imageFilms/' ~ film.imageFilm) | imagine_filter('echelle') }}" alt="le films du momment">
			</a>
		</div>
		<p>Sort le:
			{{film.dateDeSortieAt| date("m/d/Y")}}
		</p>
		<div class="description">
			<h5>Description</h5>
			{{film.description|raw}}
		</div>


		<br>

{% endblock %}
