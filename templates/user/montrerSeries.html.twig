{% extends 'baseUser2.html.twig' %}

{% block body %}

	{% for serie in series %}
		<br>

		<div class="card mb-4" style="max-width: 1500px; margin-left:5px">
			<div class="row no-gutters">

				<div class="col-md-6 col-lg-3">
					<a href="{{path('montrerLaSerie', {'id':serie.id})}}">
						<img class="imageAffichage" src="{{asset('/uploads/imageSeries/' ~ serie.imageSerie) | imagine_filter('echelle') }}" alt="le series du momment">
					</a>
				</div>

				<div class="col-md-6 col-lg-9">
					<div class="card-body">
						<h4 class="card-title">{{serie.titre}}</h4>

						<p>Sort le:
							{{serie.dateDeSortieAt| date("d/m/Y")}}
						</p>

						<div class="description">
							<h4>Description</h4>
							{{serie.description|raw}}
						</div>

					</div>
				</div>

			</div>
		</div>


		<a href="{{path('modifierSeries',{'id':serie.id})}}">
			<button class="btn btn-warning">Editer</button>
		</a>

		<a href="{{path('supprimeSeries',{'id':serie.id})}}">
			<button class="btn btn-info">Supprimer</button>
		</a>

		<br>
	{% endfor %}
{% endblock %}
