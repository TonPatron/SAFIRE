

{% block body %}

	{% for anime in animes %}
		<br>

		<h3>{{anime.titre}}
		</h3>

		<div>
			<a href="{{path('montrerLanime', {'id':anime.id})}}">
				<img class="imageabsolute" src="{{asset('/uploads/imageAnimes/' ~ anime.imageAnime) | imagine_filter('echelle') }}" alt="l'anime's du momment">
			</a>
		</div>
		<p>La date:
			{{anime.dateDeSortieAt| date("m/d/Y")}}
		</p>
		<div class="description">
			<h3>Description</h3>
			{{anime.description|raw}}
		</div>


		{# <a href="#">
		<button class="btn btn-success">Ajouter</button>
		</a> #}

		<a href="{{path('modifierAnimes',{'id':anime.id})}}">
			<button class="btn btn-warning">Editer</button>
		</a>

		<a href="{{path('supprimeAnimes',{'id':anime.id})}}">
			<button class="btn btn-info">Supprimer</button>
		</a> 
		
		<br>
	{% endfor %}
{% endblock %}
