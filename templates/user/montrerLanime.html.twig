{% extends 'baseUser2.html.twig' %}

{% block body %}


	<div class="container">

		<section class="row">

			<div class="col-12 col-md-6 col-lg-4">
				<a href="{{path('montrerLanime', {'id':anime.id})}}">
					<img class="imageAffichage" src="{{asset('/uploads/imageAnimes/' ~ anime.imageAnime) | imagine_filter('echelle') }}" alt="l'anime's du momment">
				</a>
			</div>

			<div class="col-12 col-md-6 col-lg-6">
				<h5>{{anime.titre}}
				</h5>

				<p>Sort le:
					{{anime.dateDeSortieAt| date("d/m/Y")}}
				</p>
				<div class="description">
					<h5>Description</h5>
					{{anime.description|raw}}
				</div>
			</div>

		</section>

		<hr class=" bg-info">

		<div class="trailler col-12">
			{{anime.video|raw}}
		</div>

	</div>
{% endblock %}
