{% block body %}

	{% for film in films %}
		<br>

		<div class="card mb-3" style="max-width: 1500px; margin-left:5px">
			<div class="row no-gutters">

				<div class="col-md-2">
					<a href="{{path('montrerLeFilm', {'id':film.id})}}">
						<img class="imageabsolute" src="{{asset('/uploads/imageFilms/' ~ film.imageFilm) | imagine_filter('echelle') }}" alt="le films du momment">
					</a>
				</div>

				<div class="col-md-10">
					<div class="card-body">
						<h5 class="card-title">{{film.titre}}</h5>

						<p>Sort le:
							{{film.dateDeSortieAt| date("m/d/Y")}}
						</p>

						<div class="description">
							<h5>Description</h5>
							{{film.description|raw}}
						</div>

					</div>
				</div>

			</div>
		</div>

}

		<a href="{{path('modifierFilms',{'id':film.id})}}">
			<button class="btn btn-warning">Editer</button>
		</a>

		<a href="{{path('supprimeFilms',{'id':film.id})}}">
			<button class="btn btn-info">Supprimer</button>
		</a>

		<br>
	{% endfor %}
{% endblock %}
