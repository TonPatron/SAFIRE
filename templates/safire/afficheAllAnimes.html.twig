{% extends "base2.html.twig" %}

{% block body %}

	{% for anime in animes %}

		<br>

<div class="card mb-3" style="max-width: 1500px; margin-left:5px">
	<div class="row no-gutters">

		<div class="col-md-2">
			<a href="{{path('afficheLanime', {'id':anime.id})}}">
				<img class="imageabsolute" src="{{asset('/uploads/imageAnimes/' ~ anime.imageAnime) | imagine_filter('echelle') }}" alt="l'animes du momment">
			</a>
		</div>

		<div class="col-md-10">
			<div class="card-body">
				<h5 class="card-title">{{anime.titre}}</h5>

				<p>Sort le:
					{{anime.dateDeSortieAt| date("m/d/Y")}}
				</p>

				<div class="description">
					<h5>Description</h5>
					{{anime.description|raw}}
				</div>

			</div>
		</div>

	</div>
</div>

		<br>
	{% endfor %}
{% endblock %}


