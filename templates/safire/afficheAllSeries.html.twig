{% extends "base.html.twig" %}
{% block body %}

	{% for serie in series %}
		<br>

		<div class="card mb-3" style="max-width: 1500px; margin-left:5px; border: 1px solid #2290cf">
			<div class="row no-gutters">

				<div class="col-md-3">
					<a href="{{path('afficheLaSerie', {'id':serie.id})}}">
						<img class="imageAffichage" src="{{asset('/uploads/imageSeries/' ~ serie.imageSerie) | imagine_filter('echelle') }}" alt="la series du momment">
					</a>
				</div>

				<div class="col-md-9">
					<div class="card-body">
						<h5 class="card-title">{{serie.titre}}</h5>

						<p>Sort le:
							{{serie.dateDeSortieAt| date("d/m/Y")}}
						</p>

						<div class="description">
							<h5>Description</h5>
							{{serie.description|raw}}
						</div>

					</div>
				</div>

			</div>
		</div>

		<br>
	{% endfor %}
{% endblock %}
