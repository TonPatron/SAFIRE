<script>
    
    $("#kup").keyup(function (e) { 
		var path = "{{ path('recherche') }}";

       $.ajax({
            url: path,
			data: {recherche: $("#kup").val()},
            dataType: "json",
        }).then(function(data) {
            if (data != null) {
                    $(".form-control").append(data);

        });
		        
    });

</script>
